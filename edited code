length_of_input=1
columnopt=[]
while length_of_input <= len:
    alphabets2= int(input("Enter the column of the {}".format(length_of_input) + "th alphabet "))
    if alphabets2 > 7 or alphabets2 < 1:
        print("Please enter correct column number: ")
    else:
        columnopt.append(alphabets2)
        length_of_input = length_of_input + 1


