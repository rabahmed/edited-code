len=int(input("Enter alphabets of your words: "))

length_of_input=1
columnopt=[]
while length_of_input <= len:
    alphabets= int(input("Enter the column of the {}".format(length_of_input) + "th alphabet "))
    if alphabets > 4 or alphabets < 1:
        print("Please enter correct column number")
    else:
        columnopt.append(alphabets)
        length_of_input = length_of_input + 1

print(c_0)
